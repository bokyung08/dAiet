<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F0F5EC">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- 타이틀 -->
        <TextView
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#388E3C"
            android:layout_marginBottom="48dp" />

        <!-- 이름 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <EditText
                android:id="@+id/nameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이름"
                android:padding="16dp"
                android:inputType="textPersonName"
                android:background="@null"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- 이메일 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이메일"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:background="@null"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- 비밀번호 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:padding="16dp"
                android:background="@null"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- 성별 라디오 -->
        <TextView
            android:text="성별"
            android:textSize="16sp"
            android:textColor="#388E3C"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <RadioGroup
                android:id="@+id/genderGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남성" />

                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여성"
                    android:layout_marginStart="24dp" />
            </RadioGroup>
        </com.google.android.material.card.MaterialCardView>

        <!-- 질환/목표 선택 -->
        <TextView
            android:text="dAiet를 통해 관리하고 싶은 식습관"
            android:textSize="16sp"
            android:textColor="#388E3C"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp" />

        <GridLayout
            android:id="@+id/diseaseGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginTop="8dp">

            <!-- 체중감량(질환 없음 취급) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNone"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="2dp"
                app:strokeColor="@color/unselected_card_stroke"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="체중감량"
                    android:textColor="#388E3C"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="16dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 고혈압 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHighbp"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="2dp"
                app:strokeColor="@color/unselected_card_stroke"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="고혈압"
                    android:textColor="#388E3C"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="16dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 당뇨 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDiabetes"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="2dp"
                app:strokeColor="@color/unselected_card_stroke"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="당뇨"
                    android:textColor="#388E3C"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="16dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 고지혈증 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCholesterol"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="2dp"
                app:strokeColor="@color/unselected_card_stroke"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="고지혈증"
                    android:textColor="#388E3C"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="16dp" />
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>

        <!-- 로딩 인디케이터 -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="16dp" />

        <!-- 회원가입 버튼 -->
        <Button
            android:id="@+id/signupButton"
            android:text="회원가입"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#DCD0A8"
            app:cornerRadius="12dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
